List<String> arquivos = List.of("file1.json", "file2.json", "file3.json");

List<List<Rating>> allRatings = new ArrayList<>();

for (String arq : arquivos) {
    Thread.startVirtualThread(() -> {
        try {
            List<Rating> r = loadRatings(arq);
            synchronized (allRatings) {
                allRatings.add(r);
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    });
}
